<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles.css" />
    <title>Submit Availability</title>
  </head>
  <body>
    <h1>Submit Availability</h1>

    <div class="booking-container" id="booking-container"></div>
    <div class="booking-list" id="booking-list"></div>

    <!-- instructor name -->
    <label type="text" class="instructor-fname" id="instructor-name" >Instructor:</label>
  </br>
    

    <!-- select class type -->
    <label for="class-type">Choose a class:</label>
    <select name="classes" id="classes-select" onchange="displayDesc()">
      <option>Select a class</option>
    </select>
      </br>
    <div id="class-desc" >
    </div>

    <!-- date & time -->
    <label type="date" class="class-date">Date:</label>
        <input type="date" for="class-date" class="class-date" id="class-date" min="" required></input>

    </br>
        <label type="time">Time:</label>
        <input type="time" class="class-time" id="class-time" required ></input>

    </br>
        <label type="venue">Address:</label>
        <input type="text" class="class-venue" id="class-venue" required ></input>

    </br>
        <label type="text">Comments:</label>
        <input type="text" class="comment" id="comment" ></input>

    </br>
        <label type="number">SGD:</label>
        <input type="number" class="price" id="price" ></input>
    

    <div id="btn-div"></div>
    <div class="btn" id="btn">
    <button type="submit" class="btn btn-dark create-btn" id="create-btn">Create</button>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/dashboard-inst.js"></script>
  </body>
</html>

